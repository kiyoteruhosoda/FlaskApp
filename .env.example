# Environment variables that remain necessary after migrating application
# configuration into the database. Copy these into your runtime `.env` file.

# Database
MARIADB_ROOT_PASSWORD=strong-mariadb-root-password-here
MARIADB_USER=web_user
MARIADB_PASSWORD=strong-mariadb-web_user-password-here
MARIADB_DATABASE=appdb

# Redis and Celery runtime wiring
REDIS_PASSWORD=strong-redis-password-here
REDIS_URL=redis://:strong-redis-password-here@redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Container runtime settings
PUID=1000
PGID=1000
